{
  "name": "validation_module",
  "version": "1.0.0",
  "description": "Testing of validation module and Jade templating",
  "main": "index.js",
  "scripts": {
    "test": "jscs ./scripts --reporter=console && jsinspect -t 60 ./scripts",
    "browserify": "browserify -t [jadeify --pretty false] scripts/main.js > ./bundle.js -d",
    "watchify": "watchify scripts/main.js -o ./bundle.js -t jadeify -d --verbose",
    "watch": "npm-scripts-watcher",
    "start": "npm run browserify && npm run watch"
  },
  "watch": {
    "scripts/**/*.{js,jade}": [
      "watchify"
    ]
  },
  "author": "barteks",
  "license": "ISC",
  "dependencies": {
    "basscss": "^7.0.4"
  },
  "devDependencies": {
    "browserify": "^12.0.1",
    "jade": "^1.11.0",
    "jadeify": "^4.5.0",
    "jscs": "^2.7.0",
    "jsinspect": "^0.7.2",
    "npm-scripts-watcher": "^1.0.2",
    "watchify": "^3.6.1"
  }
}
